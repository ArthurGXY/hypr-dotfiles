
#!/bin/sh

class=$(playerctl metadata --player=spotify --format '{{lc(status)}}')
icon=""

if [[ $class == "playing" ]]; then
  info=$(playerctl metadata --player=spotify --format '{{artist}} - {{title}}')
elif [[ $class == "paused" ]]; then
  icon=""
fi

if [[ $info == "" ]]; then
  text=$icon
else
  text=$icon" "$info
fi
echo -e "{\"text\":\""$text"\", \"class\":\""$class"\"}"
